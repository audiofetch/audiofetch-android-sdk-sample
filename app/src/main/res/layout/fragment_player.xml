<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="152dp"
        android:layout_height="39dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/af_logo"/>

    <TextView
        android:id="@+id/label_volume"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_volume"
        android:layout_gravity="center"
        android:textAlignment="center" />

    <SeekBar
        android:id="@+id/volume_slider"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:progress="65"
        android:progressDrawable="@drawable/seekbar"
        android:thumb="@drawable/seekbar_thumb"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingTop="10px"
        android:paddingBottom="10px"
        android:minHeight="3dip"
        android:maxHeight="3dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/label_current"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/label_current_channel"
            android:layout_gravity="end"
            android:textAlignment="textEnd" />
        <TextView
            android:id="@+id/text_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="start"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/loading_channels"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>

    <TextView
        android:id="@+id/label_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/afetch_red"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="@string/no_connection_message"
        android:visibility="gone">
    </TextView>

    <GridView
        android:id="@+id/channel_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:minHeight="150dp"
        android:columnWidth="48dp"
        android:overScrollMode="always"
        android:numColumns="auto_fit"
        android:verticalSpacing="20dp"
        android:horizontalSpacing="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center">
    </GridView>
</LinearLayout>